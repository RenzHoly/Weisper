<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/action_status_repost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_repeat_white_24dp" />

    <ImageView
        android:id="@+id/action_status_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_chat_bubble_outline_white_24dp" />

    <ImageView
        android:id="@+id/action_status_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_favorite_border_white_24dp" />

    <ImageView
        android:id="@+id/action_status_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_share_white_24dp" />

    <ImageView
        android:id="@+id/action_status_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_adjust_white_24dp" />
</LinearLayout>