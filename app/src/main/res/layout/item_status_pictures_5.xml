<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <pw.bits.weisper.view.image.ThumbnailImageView
            android:id="@+id/status_pictures_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1" />

        <pw.bits.weisper.view.image.ThumbnailImageView
            android:id="@+id/status_pictures_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <pw.bits.weisper.view.image.ThumbnailImageView
            android:id="@+id/status_pictures_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1" />

        <pw.bits.weisper.view.image.ThumbnailImageView
            android:id="@+id/status_pictures_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:layout_weight="1" />

        <pw.bits.weisper.view.image.ThumbnailImageView
            android:id="@+id/status_pictures_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>